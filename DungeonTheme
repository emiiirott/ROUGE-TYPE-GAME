import java.awt.*;

public class DungeonTheme {
    public Color wallColor;
    public Color floorColor;
    public Color torchColor;
    public String themeName;

    public DungeonTheme(String themeName, Color wallColor, Color floorColor, Color torchColor) {
        this.themeName = themeName;
        this.wallColor = wallColor;
        this.floorColor = floorColor;
        this.torchColor = torchColor;
    }

    public static DungeonTheme getThemeForLevel(int level) {
        switch ((level - 1) % 4) {
            case 0: return STONE_DUNGEON;
            case 1: return ICE_CAVERN;
            case 2: return OBSIDIAN_FORTRESS;
            case 3: return CORRUPTED_TEMPLE;
            default: return STONE_DUNGEON;
        }
    }

    public static final DungeonTheme STONE_DUNGEON = new DungeonTheme(
            "Stone Dungeon",
            new Color(80, 80, 90),
            new Color(120, 120, 130),
            new Color(255, 165, 0)
    );

    public static final DungeonTheme ICE_CAVERN = new DungeonTheme(
            "Ice Cavern",
            new Color(100, 140, 160),
            new Color(150, 180, 200),
            new Color(100, 200, 255)
    );

    public static final DungeonTheme OBSIDIAN_FORTRESS = new DungeonTheme(
            "Obsidian Fortress",
            new Color(40, 40, 60),
            new Color(80, 80, 100),
            new Color(255, 50, 50)
    );

    public static final DungeonTheme CORRUPTED_TEMPLE = new DungeonTheme(
            "Corrupted Temple",
            new Color(60, 40, 80),
            new Color(100, 60, 120),
            new Color(150, 100, 200)
    );
}
