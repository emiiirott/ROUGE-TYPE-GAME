public class Trap {
    private int gridX, gridY;
    private TrapType type;
    private int damage;
    private boolean triggered = false;
    private int tileSize;

    public Trap(int gridX, int gridY, TrapType type, int tileSize) {
        this.gridX = gridX;
        this.gridY = gridY;
        this.type = type;
        this.tileSize = tileSize;
        this.damage = type.damage;
    }

    public void trigger() {
        this.triggered = true;
    }

    public int getGridX() {
        return gridX;
    }

    public int getGridY() {
        return gridY;
    }

    public int getPixelX() {
        return gridX * tileSize;
    }

    public int getPixelY() {
        return gridY * tileSize;
    }

    public int getDamage() {
        return damage;
    }

    public boolean isTriggered() {
        return triggered;
    }

    public TrapType getType() {
        return type;
    }
}

enum TrapType {
    SPIKE_PIT("Spike Pit", 12),
    POISON_GAS("Poison Gas", 8),
    BEAR_TRAP("Bear Trap", 15),
    BLADE_TRAP("Blade Trap", 10);

    String name;
    int damage;

    TrapType(String name, int damage) {
        this.name = name;
        this.damage = damage;
    }

    public static TrapType getRandomType() {
        TrapType[] types = TrapType.values();
        return types[(int) (Math.random() * types.length)];
    }

    public String getName() {
        return name;
    }
}
